import tkinter as tk

def enregistrer_clic(event):
    """Ajoute le point cliqué à la liste et l'affiche."""
    x, y = event.x, event.y
    points.append((x, y))
    # Dessiner un petit rond pour chaque clic
    rayon = 3
    canevas.create_oval(x-rayon, y-rayon, x+rayon, y+rayon, fill="red")
    # Relier au point précédent si ce n'est pas le premier
    if len(points) > 1:
        x0, y0 = points[-2]
        canevas.create_line(x0, y0, x, y, fill="blue")

def fermer():
    racine.destroy()
    print("Parcours :")
    for point in points:
        print(point)

racine = tk.Tk()
racine.title("Cliquez pour tracer le parcours")
canevas = tk.Canvas(racine, width=1024, height=1024, bg="white")
canevas.pack()

points = []
canevas.bind("<Button-1>", enregistrer_clic)
racine.protocol("WM_DELETE_WINDOW", fermer)

racine.mainloop()
